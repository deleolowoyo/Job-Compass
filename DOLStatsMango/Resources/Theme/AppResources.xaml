                           Style="{StaticResource PhoneTextYellowStyle}" 
                           Grid.Column="1"
                           TextTrimming="WordEllipsis"  />
            </Grid>
            <Border Grid.Row="5" 
                    Grid.ColumnSpan="2" 
                    BorderThickness="1" 
                    BorderBrush="#FF6E6D6D" 
                    Margin="12,10,12,0" />
