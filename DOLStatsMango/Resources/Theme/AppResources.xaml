    <DataTemplate x:Key="DemographicListTemplate">
        <Grid Margin="12,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock VerticalAlignment="Top" 
					   Text="{Binding Name}"
                       HorizontalAlignment="Left" 
					   Style="{StaticResource TextBlockHeaderStyle}" 
					   Margin="12,0,12,0" />
            <Grid Margin="0,5,0,0" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Neighborhood Value: "
                               HorizontalAlignment="Left" 
					           Style="{StaticResource PhoneTextListBoxSmallStyle}" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Column="1">
                    <TextBlock Text="{Binding FormattedNeighborhoodValue, Converter={StaticResource stringToNAConv}}"
                               HorizontalAlignment="Left" 
					           Style="{StaticResource PhoneTextListBoxSmallStyle}" />
                    <Image Source="{Binding NeighborhoodValue, Converter={StaticResource demographicValueToImageConv}}"
                           VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
            <Grid Margin="0,5,0,0" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="National Value: "
                               HorizontalAlignment="Left" 
					           Style="{StaticResource PhoneTextListBoxSmallStyle}" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Column="1">
                    <TextBlock Text="{Binding FormattedNationalValue, Converter={StaticResource stringToNAConv}}"
                               HorizontalAlignment="Left" 
					           Style="{StaticResource PhoneTextListBoxSmallStyle}" />
                    <Image Source="{Binding NationalValue, Converter={StaticResource demographicValueToImageConv}}"
                           VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="ListingsListTemplate">
