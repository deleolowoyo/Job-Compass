<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:sys="clr-namespace:System;assembly=mscorlib" 
    xmlns:imaging="clr-namespace:System.Windows.Media.Imaging;assembly=System.Windows" 
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone" 
    xmlns:nav="clr-namespace:System.Windows.Navigation;assembly=Microsoft.Phone" 
    xmlns:telerikPrimitives="clr-namespace:Telerik.Windows.Controls;assembly=Telerik.Windows.Controls.Primitives" 
    xmlns:telerikCore="clr-namespace:Telerik.Windows.Controls;assembly=Telerik.Windows.Core" 
    xmlns:telerikChart="clr-namespace:Telerik.Windows.Controls;assembly=Telerik.Windows.Controls.Chart" 
    xmlns:phoneToolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit" 
    xmlns:mapControl="clr-namespace:Microsoft.Phone.Controls.Maps;assembly=Microsoft.Phone.Controls.Maps" 
    xmlns:controls="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls" 
    xmlns:controlsPrimitives="clr-namespace:Microsoft.Phone.Controls.Primitives;assembly=Microsoft.Phone.Controls" 
    xmlns:coding4FunConverters="clr-namespace:Coding4Fun.Phone.Controls.Converters;assembly=Coding4Fun.Phone.Controls" 
    xmlns:localConverters="clr-namespace:DOLStatsMango.Framework.Helpers" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d">

    <SolidColorBrush x:Key="ModalWindowBackground" Color="#CC000000" />
    <phoneToolkit:RelativeTimeConverter x:Key="relativeDateConv" />
    <localConverters:BoolToYesNoConverter x:Key="boolToYesNoConv" />
    <localConverters:StringtoNAConverter x:Key="stringToNAConv" />
    <localConverters:NegativeBoolConverter x:Key="negBoolConv" />
    <localConverters:NegativeBoolVisibilityConverter x:Key="negBoolVisConv" />
    <localConverters:JobFieldToHeadingConverter x:Key="jobFieldToHeadingConv" />
    <coding4FunConverters:BooleanToVisibilityConverter x:Key="boolToVisibleConv" />
    <localConverters:StringToVisibilityConverter x:Key="stringToVisibleConv" />
    <localConverters:FormatStringConverter x:Key="ValueToKConverter" Format="{}{0:g3}K"/>
    <localConverters:ListingEmptyStringConverter x:Key="listingEmptyStringConv" />
    <localConverters:DemographicValueToImageConverter x:Key="demographicValueToImageConv" />

    <!-- App URI Mapper -->
    <nav:UriMapper x:Key="UriMapper">
        <nav:UriMapping Uri="/MainPage" MappedUri="/MainPage.xaml" />
        <nav:UriMapping Uri="/SearchAdvancedPage/{pageHeading}" MappedUri="/Views/SearchAdvancedView.xaml?pageHeading={pageHeading}" />
        <nav:UriMapping Uri="/JobStatsPage" MappedUri="/Views/JobStatsView.xaml" />
        <nav:UriMapping Uri="/JobDataPage" MappedUri="/Views/JobDataView.xaml" />
        <nav:UriMapping Uri="/NeighborhoodPage" MappedUri="/Views/NeighborhoodView.xaml" />
        <nav:UriMapping Uri="/SearchResultsPage/{keyword}/{doSavedSearch}" MappedUri="/Views/SearchResultsView.xaml?keyword={keyword}&amp;doSavedSearch={doSavedSearch}" />
        <nav:UriMapping Uri="/CompanySearchResultsPage/{companyName}" MappedUri="/Views/CompanySearchResults.xaml?companyName={companyName}" />
        <nav:UriMapping Uri="/JobDetailsPage/{jobId}/{ranking}" MappedUri="/Views/JobDetailsView.xaml?jobId={jobId}&amp;ranking={ranking}" />
        <nav:UriMapping Uri="/JobMapPage" MappedUri="/Views/JobMapView.xaml" />
        <nav:UriMapping Uri="/SavedJobsPage" MappedUri="/Views/SavedJobsView.xaml" />
        <nav:UriMapping Uri="/SavedSearchesPage" MappedUri="/Views/SavedSearchesView.xaml" />
        <nav:UriMapping Uri="/SettingsPage" MappedUri="/Views/SettingsView.xaml" />
        <nav:UriMapping Uri="/AboutPage" MappedUri="/Views/AboutView.xaml" />
        <nav:UriMapping Uri="/ErrorPage" MappedUri="/Views/ErrorView.xaml" />
    </nav:UriMapper>

    <DataTemplate x:Key="SearchDropDownPopUpListPickerItemTemplate">
        <Grid Margin="12,0,0,10">
            <!--<Image Height="90" Margin="0" Source="{Binding PhotoFileName, Converter={StaticResource fileToImageConv}}" Width="90" />-->
            <TextBlock Text="{Binding Name}" Grid.Column="1" VerticalAlignment="Top" d:LayoutOverrides="Width" x:Uid="_Binding_Name__TextBlock" />
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="SearchDropDownListPickerItemTemplate">
        <Grid>
            <!--<Image Height="30" Margin="0" Source="{Binding PhotoFileName, Converter={StaticResource fileToImageConv}}" Width="30" />-->
            <TextBlock Text="{Binding Name}" VerticalAlignment="Top" d:LayoutOverrides="Width" x:Uid="_Binding_Name__TextBlock1" />
        </Grid>
    </DataTemplate>

    <ControlTemplate x:Key="MainSearchButtonTemplate" TargetType="Button">
        <Grid>
            <Image Source="Resources/Images/Search.png" Width="50" Height="50" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <CompositeTransform ScaleX="-1" />
                </Image.RenderTransform>
            </Image>
        </Grid>
    </ControlTemplate>

    <DataTemplate x:Key="SearchResultListTemplate">
        <Grid Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Border Width="43" 
                    Height="43" 
                    BorderThickness="0" 
                    Grid.RowSpan="2" 
                    VerticalAlignment="Top">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="Transparent" Offset="0.13"/>
                        <GradientStop Color="{StaticResource PhoneForegroundColor}" Offset="0.13"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Polygon HorizontalAlignment="Left" VerticalAlignment="Top" Fill="#0D5668">
                        <Polygon.Points>
                            <Point X="11" Y="0"/>
                            <Point X="11" Y="11"/>
                            <Point X="0" Y="11"/>
                        </Polygon.Points>
                    </Polygon>
                    <TextBlock Text="{Binding Ranking}" 
                               HorizontalAlignment="Center" 
                               Foreground="{StaticResource PhoneBackgroundBrush}" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
            <TextBlock Text="{Binding JobTitle}" 
                       Style="{StaticResource PhoneTextListBoxNormalSemiBoldStyle}" 
                       Grid.Column="1" 
                       Grid.ColumnSpan="2"
                       VerticalAlignment="Top" />
            <TextBlock Text="{Binding DescriptionTeaser}" 
                       Style="{StaticResource PhoneTextListBoxSmallStyle}" 
                       Grid.Row="1" 
                       Grid.Column="1" 
                       Grid.ColumnSpan="2" 
                       TextWrapping="Wrap" />
            <TextBlock Text="{Binding Company}" 
                       Style="{StaticResource PhoneTextYellowStyle}" 
                       Grid.Row="2" 
                       Grid.Column="1" 
                       HorizontalAlignment="Left" 
                       TextTrimming="WordEllipsis" />
            <TextBlock Text="{Binding PostedDate, Converter={StaticResource relativeDateConv}}" 
                       Style="{StaticResource PhoneTextYellowStyle}" 
                       Grid.Row="2" 
                       Grid.Column="2" 
                       HorizontalAlignment="Right" />
            <Border Grid.Row="3" 
                    Grid.ColumnSpan="3" 
                    BorderThickness="1" 
                    BorderBrush="#FF6E6D6D" 
                    Margin="12,10,12,0" />
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="SavedSearchesListTemplate">
        <Grid Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock Text="{Binding Keywords}" 
                       Style="{StaticResource PhoneTextListBoxMediumLargeBoldStyle}"
                       TextTrimming="WordEllipsis"/>
            <TextBlock Text="{Binding FullSearchCriteria, Converter={StaticResource stringToNAConv}}" 
                       Grid.Row="1" 
                       Style="{StaticResource PhoneTextListBoxSubtleStyle}"
                       TextWrapping="Wrap"/>
            <Border Grid.Row="2" 
                    BorderThickness="1" 
                    BorderBrush="#FF6E6D6D" 
                    Margin="12,10,12,0" />
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="SavedJobsListTemplate">
        <Grid Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding JobTitle}" 
                       Style="{StaticResource PhoneTextListBoxNormalSemiBoldStyle}" 
                       Grid.ColumnSpan="2"
                       VerticalAlignment="Top" />
            <TextBlock Text="{Binding Company}" 
                       Style="{StaticResource PhoneTextYellowStyle}" 
                       Grid.Row="1" 
                       HorizontalAlignment="Left" 
                       TextTrimming="WordEllipsis" />
