            <Border Grid.Row="3" 
                    Grid.ColumnSpan="3" 
                    BorderThickness="1" 
                    BorderBrush="#FF6E6D6D" 
                    Margin="12,10,12,0" />
        </Grid>
    </DataTemplate>

