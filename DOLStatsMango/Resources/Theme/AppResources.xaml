    <DataTemplate x:Key="AmberAlertListTemplate" phoneToolkit:TiltEffect.IsTiltEnabled="True">
        <StackPanel x:Name="stackPanel" Orientation="Horizontal" Margin="0,0,0,17" phoneToolkit:TiltEffect.IsTiltEnabled="True" Height="160">
            <StackPanel Width="311" VerticalAlignment="Top">
                <TextBlock Text="{Binding NameOfChild}" TextWrapping="Wrap" Style="{StaticResource PhoneTextNormalStyle}" Margin="12,0,12,5" Foreground="White" x:Uid="_Binding_NameOfChild__TextBlock" />
                <StackPanel Margin="12,-6,12,5" Orientation="Horizontal">
                    <TextBlock Text="Case Type: " Style="{StaticResource PhoneTextSmallStyle}" Margin="0" Foreground="#99FFFFFF" x:Uid="Case_Type___TextBlock" />
                    <TextBlock Text="{Binding AlertType}" TextWrapping="Wrap" Margin="0" Style="{StaticResource PhoneTextSmallStyle}" Foreground="#99FFFFFF" x:Uid="_Binding_AlertType__TextBlock" />
                </StackPanel>
                <StackPanel Margin="12,-6,12,5" Orientation="Horizontal">
                    <TextBlock Text="Missing Since: " Style="{StaticResource PhoneTextListBoxSmallStyle}" Margin="0" Foreground="#99FFFFFF" x:Uid="Missing_Since___TextBlock" />
                    <TextBlock Text="{Binding MissingSince}" TextWrapping="Wrap" Style="{StaticResource PhoneTextListBoxSmallStyle}" Margin="0" Foreground="#99FFFFFF" x:Uid="_Binding_MissingSince__TextBlock" />
                </StackPanel>
                <StackPanel Margin="12,-6,12,5" Orientation="Horizontal">
                    <TextBlock Text="Age Now: " Style="{StaticResource PhoneTextListBoxSmallStyle}" Margin="0" Foreground="#99FFFFFF" x:Uid="Age_Now___TextBlock" />
                    <TextBlock Text="{Binding AgeNow}" TextWrapping="Wrap" Margin="0" Style="{StaticResource PhoneTextListBoxSmallStyle}" Foreground="#99FFFFFF" x:Uid="_Binding_AgeNow__TextBlock" />
                </StackPanel>
                <StackPanel Margin="12,-6,12,5" Orientation="Horizontal">
                    <TextBlock Text="Missing From: " Style="{StaticResource PhoneTextListBoxSmallStyle}" Margin="0" Foreground="#99FFFFFF" x:Uid="Missing_From___TextBlock" />
                    <TextBlock Text="{Binding MissingFrom}" TextWrapping="Wrap" Margin="0" Style="{StaticResource PhoneTextListBoxSmallStyle}" Width="165" Foreground="#99FFFFFF" x:Uid="_Binding_MissingFrom__TextBlock" />
                </StackPanel>
            </StackPanel>
            <Image x:Name="imgChild" Source="{Binding AlertImageUrl}" VerticalAlignment="Top" />
        </StackPanel>
    </DataTemplate>
